<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>Blogify</title>
  </head>
  <body>
    <style>
       body{
      background-color: #212121;
      font-family: 'Roboto', sans-serif;
      color: white;
    }
    .card {
        margin-bottom: 1rem;
      }

      /* Responsive styles */
      @media (max-width: 576px) {
        .col {
          flex: 0 0 100%;
          max-width: 100%;
        }
        #main{
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
        }
        #card{
          width: 100%;
          margin-bottom: 1rem;
        }
      }

      @media (min-width: 577px) and (max-width: 768px) {
        .col {
          flex: 0 0 50%;
          max-width: 50%;
        }
        #main{
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
        }
        #card{
          width: 100%;
          margin-bottom: 1rem;
        }
      }
      @media (min-width: 769px) and (max-width: 992px) {
        .col {
          flex: 0 0 33.3333%;
          max-width: 33.3333%;
        }
      }

      @media (min-width: 993px) {
        .col {
          flex: 0 0 25%;
          max-width: 25%;
        }
      }
    </style>
    <%- include('./partials/nav') %>
    <div id="main" class="container mt-3">
      <div class="row row-cols-3">
        <% blogs.forEach(blog=>{ %>
        <div class="col">
          <div id="card" class="card" style="width: 18rem">
            <img src="<%= blog.coverImage %>" class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title"><%=blog.title%></h5>
              <p class="card-text"><%= blog.body.substring(0, 100) %>...</p>
              <a href="/blog/<%= blog._id%> " class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
        <%})%>
      </div>
    </div>
    <%- include('./partials/script.ejs') %>
  </body>
</html>
